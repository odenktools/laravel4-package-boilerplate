{
    "name": "odenktools/coolcms",
    "description": "Laravel 4 Framework Package Boilerplate. This small blueprint for creating laravel4 package",
	"type": "library",
	"keywords": ["laravel", "boilerplate","laravel package"],
	"homepage": "https://github.com/odenktools/laravel4-package-boilerplate",
	"license": "MIT",
    "authors": [
        {
            "name": "Odenktools",
            "email": "odenktools86@gmail.com",
			"homepage": "http://odenktools.com",
            "role": "Developer"	
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "4.2.*",
		"laravelbook/ardent": "dev-master",
		"illuminate/html": "4.2.*"
    },
    "require-dev": {
        "illuminate/auth": "~4.2",
        "illuminate/console": "~4.2",
        "illuminate/database": "~4.2"
    },	
    "autoload": {
        "classmap": [
            "src/migrations",
			"src/controllers",
			"src/models"
        ],
        "psr-4": {
            "Odenktools\\Coolcms\\": "src/"
        }
    },
    "minimum-stability": "stable"
}
